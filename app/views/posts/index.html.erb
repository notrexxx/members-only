<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_url %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
