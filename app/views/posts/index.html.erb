<h1>Posts</h1>
<% if user_signed_in? %>
  <%= link_to 'New Post', new_post_url %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <%  if user_signed_in? %>
      <th>Author</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        
        <%  if user_signed_in? %>
        <td><%= post.user.name %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

    <% if !user_signed_in? %>
      <p class="control">
        <%= link_to 'Sign In', new_user_session_path %>
      </p>
    <% end %>
<br>
