<h1>Posts</h1>
<%= user_new(@user) %>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
    
      <th><%= user_author(@user) %></th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= author(post) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


      <p class="control">
      <%= user_sign(@user) %>
      </p>
     
<br>
